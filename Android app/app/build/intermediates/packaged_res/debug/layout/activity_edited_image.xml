<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edited_image_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    tools:context=".EditedImage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backToFpgaActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/previous"
            android:background="@drawable/discard_button"
            android:drawablePadding="1dp"
            android:text="@string/editedImage"
            android:textSize="20sp"
            android:typeface="serif"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:text="@string/imagetitle"
            android:textSize="20sp"
            android:typeface="serif"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/pictureSubtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:typeface="serif"
        android:fontFamily="sans-serif-light"
        />

    <ImageView
        android:id="@+id/editedImage"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="10dp"
        android:layout_weight="15"
        android:paddingTop="0dp"
        android:background="@color/transparent"
        />

    <Button
        android:id="@+id/afterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:background="@drawable/before_after_background"
        android:drawablePadding="1dp"
        android:textSize="18sp"
        android:typeface="serif"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"/>

</LinearLayout>